{
  "manifest_version": 3,
  "name": "Trocador Universal de Fontes",
  "version": "1.0",
  "description": "Altere a fam√≠lia de fontes em todos os sites",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup-html.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-js.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background-js.js"
  }
}
